<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/MultiShopCartGroup">
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/image" android:layout_width="82dp" android:layout_height="82dp" android:layout_margin="@dimen/margin_large" android:importantForAccessibility="no"/>
    <TextView android:layout_gravity="center_vertical" android:id="@+id/txt_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xlarge_large" android:layout_marginRight="@dimen/margin_xlarge_large" android:layout_weight="1" style="@style/TextBlack.Bold"/>
    <TextView android:layout_gravity="center_vertical" android:id="@+id/txt_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xlarge_large" android:layout_marginRight="@dimen/margin_xlarge_large" android:layout_weight="1" style="@style/TextGrey"/>
    <Button android:layout_gravity="right" android:id="@+id/btn_dismiss" android:layout_margin="@dimen/margin_medium" style="@style/TextButton"/>
</LinearLayout>
