<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:id="@+id/ec_token" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/paypal_checkout_ec_token" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/PYPLTextViewBody1Style"/>
    <TextView android:textSize="16sp" android:id="@+id/ec_token_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_alignBottom="@+id/ec_token" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/ec_token" style="@style/PYPLTextViewBody1Style"/>
    <TextView android:textSize="16sp" android:id="@+id/button_session_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/paypal_checkout_button_session_id" android:layout_below="@+id/ec_token" android:layout_marginStart="8dp" style="@style/PYPLTextViewBody1Style"/>
    <TextView android:textSize="16sp" android:id="@+id/button_session_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_alignBottom="@+id/button_session_id" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/button_session_id" style="@style/PYPLTextViewBody1Style"/>
    <TextView android:textSize="16sp" android:id="@+id/session_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/paypal_checkout_session_id" android:layout_below="@+id/button_session_id" android:layout_marginStart="8dp" style="@style/PYPLTextViewBody1Style"/>
    <TextView android:textSize="16sp" android:id="@+id/session_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_alignBottom="@+id/session_id" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/session_id" style="@style/PYPLTextViewBody1Style"/>
    <RelativeLayout android:id="@+id/pay_now_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_below="@+id/session_text" android:backgroundTint="@color/white_color">
        <com.paypal.pyplcheckout.home.view.customviews.PayPalActionButton android:gravity="center" android:id="@+id/pay_now_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/paypal_checkout_pay_now" android:layout_centerHorizontal="true"/>
        <ProgressBar android:id="@+id/pay_now_progress_spinner" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
