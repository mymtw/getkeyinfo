<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="horizontal" android:id="@+id/llTop" android:background="@color/qualtics" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="24dp" android:textColor="@color/white" android:gravity="center_vertical" android:layout_gravity="left" android:id="@+id/popover_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp"/>
        <ImageButton android:layout_gravity="right" android:id="@+id/btnCancel" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_clear_black_24dp" android:tint="@color/white"/>
    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="400dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_alignParentTop="true">
        <WebView android:id="@+id/popover_webview" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
