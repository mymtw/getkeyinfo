<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/price_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:ellipsize="end" android:id="@+id/text_price" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/clg_text_body"/>
        <com.etsy.android.stylekit.views.LoadingIndicatorView android:id="@+id/price_loading_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/margin_medium"/>
    </LinearLayout>
    <TextView android:id="@+id/text_shipping_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/clg_text_title_small"/>
</LinearLayout>
