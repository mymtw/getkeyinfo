<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="?attr/rippleOnSurface">
    <item android:id="@android:id/mask">
        <inset android:insetLeft="2sp" android:insetRight="2sp" android:insetTop="8sp" android:insetBottom="8sp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/clg_button_cap_radius"/>
                <solid android:color="@color/clg_color_bubblegum"/>
            </shape>
        </inset>
    </item>
    <item android:state_checked="false">
        <inset android:insetTop="6sp" android:insetBottom="6sp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/clg_button_cap_radius"/>
                <stroke android:width="2dp" android:color="?attr/clg_color_actiongroup_outline"/>
            </shape>
        </inset>
    </item>
    <item>
        <selector android:enterFadeDuration="150" android:exitFadeDuration="150">
            <item android:state_checked="true">
                <inset android:insetTop="6sp" android:insetBottom="6sp">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/clg_button_cap_radius"/>
                        <stroke android:width="2dp" android:color="?attr/clg_color_actiongroup_circle_selected"/>
                    </shape>
                </inset>
            </item>
        </selector>
    </item>
</ripple>
