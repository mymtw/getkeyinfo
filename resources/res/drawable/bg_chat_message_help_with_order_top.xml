<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/clg_color_divider"/>
            <corners android:topLeftRadius="@dimen/message_corner_radius" android:topRightRadius="@dimen/message_corner_radius" android:bottomLeftRadius="@dimen/message_corner_radius"/>
        </shape>
    </item>
    <item android:gravity="left">
        <shape android:shape="rectangle">
            <size android:width="@dimen/message_corner_radius"/>
            <solid android:width="6dp" android:color="@color/message_background_current_user"/>
            <corners android:topLeftRadius="@dimen/message_corner_radius" android:bottomLeftRadius="@dimen/message_corner_radius"/>
        </shape>
    </item>
</layer-list>
