<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/atom_black_five_percent">
    <item>
        <selector>
            <item android:state_focused="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/sk_btn_corner_radius"/>
                            <stroke android:width="1dp" android:color="?attr/clg_color_divider"/>
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/sk_btn_corner_radius"/>
                            <solid android:color="@color/atom_black_five_percent"/>
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/sk_btn_corner_radius"/>
                            <stroke android:width="1dp" android:color="?attr/clg_color_divider"/>
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/sk_btn_corner_radius"/>
                            <solid android:color="@color/atom_black_five_percent"/>
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/sk_btn_corner_radius"/>
                    <stroke android:width="1dp" android:color="?attr/clg_color_divider"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
